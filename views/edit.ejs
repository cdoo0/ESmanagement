<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST APP +</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">LIST APP +</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>買い物リスト編集</h1>
      </div>
      <div class="item-form-wrapper">
        <p class="form-label">買うもの</p>
        <form action="/update/<%= item.id %>" method="post">
          <input type="text" name="itemName" value="<%= item.name %>" required>

          <p class="form-label">カテゴリ</p>
          <select name="category_id">
            <option value="">カテゴリなし</option>
            <% categories.forEach(category => { %>
              <option value="<%= category.id %>" <%= category.id === item.category_id ? 'selected' : '' %>>
                <%= category.name %>
              </option>
            <% }); %>
            <option value="new">新規カテゴリを追加</option>
          </select>

          <input type="text" name="newCategoryName" id="newCategoryField" placeholder="新規カテゴリ名" style="display: none;">

          <input type="submit" value="更新する">
        </form>
      </div>
      <a href="/index" class="cancel-button">もどる</a>
    </div>
  </body>
</html>